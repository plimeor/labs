    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@orbit/shared": "workspace:*",
    "@plimeor-labs/logger": "workspace:*",
    "@sinclair/typebox": "^0.34.0",
    "cron-parser": "^5.5.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.36.4",
    "elysia": "^1.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@plimeor-labs/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "drizzle-kit": "^0.28.1",
    "typescript": "^5"
  }
