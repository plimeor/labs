{
  "name": "labs",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/orbit/*",
      "packages/*",
      "tools/*"
    ],
    "catalog": {
      "@logtape/logtape": "^0.8.0"
    }
  },
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@plimeor-labs/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,json,md,css}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
