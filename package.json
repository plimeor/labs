{
  "name": "labs",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "typescript": "^5"
  }
}
