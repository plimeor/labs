{
  "name": "labs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test"
  },
  "devDependencies": {
    "@plimeor-labs/oxfmt-config": "workspace:*",
    "@plimeor-labs/oxlint-config": "workspace:*",
    "@plimeor-labs/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "oxfmt --write",
      "oxlint"
    ],
    "*.{json,md}": [
      "oxfmt --write"
    ]
  }
}
